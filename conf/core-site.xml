    <name>fs.glusterfs.impl</name>
    <value>org.apache.hadoop.fs.glusterfs.GlusterFileSystem</value>
  </property>

  <property>
    <name>fs.default.name</name>
    <value>glusterfs://ambari-3.abrv8.com:gv0<</value>
